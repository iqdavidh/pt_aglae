{
  "name": "CRM_backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "nyc mocha --timeout 20000 test/**/*.js",
    "report-coverage": "nyc report --reporter=text-lcov >  coverage.lcov && codecov"
  },
  "dependencies": {},
  "devDependencies": {
    "codecov": "^3.5.0",
    "mocha": "^10.2.0",
    "nyc": "^14.1.1"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*"
    ],
    "delay": "2500"
  },
  "directories": {
    "test": "test"
  }
}
